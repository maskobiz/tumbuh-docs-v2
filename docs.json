                "pages": [
                  "en/vault/vault-architecture",
                  "en/vault/emergency-protocol",
                  "en/vault/risk-management-strategies"
                ]
              },
              {
                "group": "Legal & Compliance",
                "pages": [
                  "en/legal-and-compliance/legal",
                  "en/legal-and-compliance/privacy-policy",
                  "en/legal-and-compliance/risk-disclosure"
                ]
              }
            ]
          },
          {
            "tab": "Events",
            "groups": [
              {
                "group": "Events",
                "pages": ["en/events/info", "en/events/tumbuh-waitlist"]
